<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/coloredlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_red_shade"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/confirmationImage"
            android:layout_width="@dimen/alert_box_image_size"
            android:layout_height="@dimen/alert_box_image_size"
            android:layout_margin="@dimen/alert_box_image_margin"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/confirmationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/alert_box_text_view_padding"
            android:gravity="center"
            android:layout_marginBottom="@dimen/alert_box_text_view_margin_bottom"
            android:text="Some Text"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>